{
  "name": "seen-editor",
  "version": "0.1.2",
  "description": "seen editor",
  "type": "module",
  "keywords" : [
    "seen" , 
    "programming language", 
    "editor",
    "س" , 
    "لغة برمجة", 
    "محرر" 
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abukhadra/seen-editor.git"
  },
  "directories": {
    "example": "examples",
    "lib": "lib"
  },
  "scripts": {
    "preinstall" : "npm run clean",
    "prepare" : "vite build",
    "postprepare" : "node run html2JS.js",
    "clean": "rm -rf ./dist && rm -rf ./seditor.js && rm -rf ./node_modules",
    "ex-editor": "npm i && npx http-server --cors -o ./examples/en-editor.html",
    "ex-code": "npm i && npx http-server --cors -o ./examples/en-code.html",
    "ex-editor-ar": "npm i && npx http-server --cors -o ./examples/ar-editor.html",
    "ex-code-ar": "npm i && npx http-server --cors -o ./examples/ar-code.html"
  },
  "dependencies": {
    "seen-compiler" : "https://github.com/abukhadra/seen-compiler"
  },  
  "author": "Mustafa Abukhadra",
  "license": "MIT",
  "homepage": "https://seenlang.org",
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.1.4",
    "http-server": "^14.1.1"
  }
}